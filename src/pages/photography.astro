  { src: '/images/photo-01.jpg', alt: 'Placeholder image 1', title: 'Untitled 1' },
  { src: '/images/photo-02.jpg', alt: 'Placeholder image 2', title: 'Untitled 2' },
  { src: '/images/photo-03.jpg', alt: 'Placeholder image 3', title: 'Untitled 3' },
  { src: '/images/photo-04.jpg', alt: 'Placeholder image 4', title: 'Untitled 4' },
  { src: '/images/photo-05.jpg', alt: 'Placeholder image 5', title: 'Untitled 5' },
  { src: '/images/photo-06.jpg', alt: 'Placeholder image 6', title: 'Untitled 6' },
  { src: '/images/photo-07.jpg', alt: 'Placeholder image 7', title: 'Untitled 7' },
