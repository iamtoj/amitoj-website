---
import Layout from '../layouts/Layout.astro';

// Project data - replace with actual project details
const projects = [
  {
    title: 'Knowledge Creation Systems',
    description: 'Building personal infrastructure for thinking, creating, and acting with AI partnership. Systems that capture, classify, and process information through cognitive loops.',
    tags: ['AI Partnership', 'Personal Infrastructure', 'Knowledge Management'],
    status: 'Active Development',
    link: null,
  },
  {
    title: 'Third Enlightenment Consulting',
    description: 'Helping individuals and organizations navigate the intersection of artificial intelligence and human flourishing. Strategic guidance for transformation with clarity and purpose.',
    tags: ['Strategy', 'AI Integration', 'Organizational Change'],
    status: 'Active',
    link: '/contact',
  },
  {
    title: 'Research & Writing',
    description: 'Essays and explorations on technology, contemplative practice, and human development. Investigating what it means to thrive in an age of intelligent machines.',
    tags: ['Essays', 'Technology', 'Contemplative Practice'],
    status: 'Ongoing',
    link: '/writing',
  },
];

---

<Layout title="Work | Amitoj Singh" description="Projects at the intersection of technology, strategy, and human flourishing.">
  <section class="container-zen section-zen">
    <div class="max-w-2xl">
      <h1 class="mb-8 text-balance">Work</h1>

      <div class="accent-line mb-8"></div>

      <p class="text-lg text-ink-light mb-6">
        Projects exploring how technology can serve human flourishing,
        from personal knowledge systems to organizational transformation.
      </p>
    </div>
  </section>

  <section class="container-zen section-zen border-t border-oat-300">
    <h2 class="text-2xl mb-8">Current Projects</h2>

    <div class="project-grid">
      {projects.map((project) => (
        <article class="project-card">
          <div class="project-card-content">
            <div class="flex items-start justify-between gap-4 mb-3">
              <h3 class="text-xl m-0">{project.title}</h3>
              {project.status && (
                <span class="status-badge">
                  {project.status}
                </span>
              )}
            </div>

            <p class="text-ink-light mb-4">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tags.map((tag) => (
                <span class="text-xs text-ink-muted bg-oat-100 px-2 py-1">
                  {tag}
                </span>
              ))}
            </div>

            {project.link && (
              <a href={project.link} class="project-link mt-4">
                Learn more &rarr;
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="container-zen section-zen border-t border-oat-300 bg-oat-100">
    <div class="max-w-2xl">
      <h2 class="text-2xl mb-6">Collaborate</h2>

      <p class="text-ink-light mb-8">
        Open to consulting engagements, research collaborations,
        and conversations about technology and human flourishing.
      </p>

      <a href="/contact" class="text-ink hover:text-ink-light no-underline">
        Get in touch &rarr;
      </a>
    </div>
  </section>
</Layout>

<style>
  .project-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .project-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .project-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .project-card {
    border: 1px solid #EBE3D4; /* oat-300 */
    background: #FAF7F0; /* oat-50 */
    transition: border-color 0.2s ease;
  }

  .project-card:hover {
    border-color: #B5A589; /* darker oat */
  }

  .project-card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .status-badge {
    font-size: 0.75rem;
    color: #696455; /* ink-muted */
    background: #EBE3D4; /* oat-300 */
    padding: 0.25rem 0.5rem;
    white-space: nowrap;
  }

  .project-link {
    display: inline-block;
    color: #2C2A25; /* ink */
    text-decoration: none;
    font-size: 0.875rem;
  }

  .project-link:hover {
    color: #4A473F; /* ink-light */
  }
</style>
